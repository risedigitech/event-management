<p id="notice"><%= notice %></p>

<h1>Vendors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Size</th>
      <th>Budget</th>
      <th>Price</th>
      <th>Description</th>
      <th>Category</th>
      <th>Vendor type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.name %></td>
        <td><%= vendor.location %></td>
        <td><%= vendor.size %></td>
        <td><%= vendor.budget %></td>
        <td><%= vendor.price %></td>
        <td><%= vendor.description %></td>
        <td><%= vendor.category.name %></td>
        <td><%= vendor.vendor_type.name %></td>
        <td><%= link_to 'Show', vendor %></td>
        <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
        <td><%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

